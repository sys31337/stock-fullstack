{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/main/api/*.ts",
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/renderer/src/config.ts",
    "src/renderer/src/config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*",
        "src/renderer/styles/*"
      ],
      "@modules/*": [
        "src/renderer/src/modules/*"
      ],
      "@config": [
        "src/renderer/src/config"
      ],
      "@config/*": [
        "src/renderer/src/config/*"
      ],
      "@shared/*": [
        "src/renderer/src/shared/*"
      ],
      "@theme/*": [
        "src/renderer/src/theme/*"
      ]
    }
  }
}