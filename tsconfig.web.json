{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/main/api/*.ts",
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/renderer/src/config.ts",
    "src/renderer/src/config.ts",
    "i18n.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json",
    }
  ],
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@web/*": [
        "src/renderer/src/*",
        "src/renderer/styles/*"
      ]
    }
  }
}