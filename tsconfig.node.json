{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/preload/*",
    "src/main/api/main.ts",
    "src/main/api/*",
    "src/main/api/types/*",
    "src/main/api/**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "composite": true,
    "types": [
      "electron-vite/node",
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/main/api/*"
      ]
    }
  }
}